<%- layout('layouts/boilerplate') %>
    <h1>All campgrounds</h1>
    <div>
        <a href="/campgrounds/new">New campground</a>
    </div>
    <% for (let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-4">
                    <img class="img-fluid" src="<%= campground.image %>" alt="">
                </div>
                <div class="col-8">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/campgrounds/<%= campground._id %>"><%= campground.title %></a></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text"><small class="text-muted"><%= campground.location %></small></p>
                    </div>
                </div>
            </div>
        </div>
    <% } %>