<%- layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %> image">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price%>/night</li>
                <li class="list-group-item">
                    <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-info">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= campground.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </li>
            </ul>
            <div class="card-footer">
                2 days ago
            </div>
        </div>
    </div>
</div>