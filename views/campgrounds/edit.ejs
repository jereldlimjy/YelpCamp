<%- layout('layouts/boilerplate') %>
    <h1>Edit campground</h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= campground.title %>" placeholder="title of campground">
        </div>
        <div>
            <label for="location">Title</label>
            <input type="text" id="location" name="location" value="<%= campground.location %>" placeholder="location of campground">
        </div>
        <button>Edit campground!</button>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back to campground</a>